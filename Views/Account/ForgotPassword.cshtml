@model CustomerSubscriptionApp.Web.ViewModels.ForgotPasswordViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h3 class="mb-4">Forgot Password</h3>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    <p>Password reset link generated (dev only):</p>
                    <a href="@Html.Raw(ViewBag.ResetLink)" class="btn btn-success" target="_blank">Click here to Reset Password</a>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username / Email</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
            </form>

            <div class="mt-3">
                <a asp-action="Login" asp-controller="Account">Back to Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
