@{
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name : "Guest";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SubscriptionApp</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.min.css" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #3AAFA9;
            --primary-dark: #2B7A78;
            --primary-light: #DEF2F1;
            --primary-lighter: #F0F9F8;
            --primary-text: #FEFFFF;
        }

        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--primary-text) !important;
        }

        /* Primary Navbar */
        .navbar-primary {
            background-color: var(--primary-color) !important;
            border-bottom: 3px solid var(--primary-dark);
        }

            .navbar-primary .navbar-nav .nav-link {
                color: var(--primary-text) !important;
                font-weight: 500;
                padding: 0.5rem 1rem;
                margin: 0 0.2rem;
                border-radius: 0.375rem;
                transition: all 0.3s ease;
            }

                .navbar-primary .navbar-nav .nav-link:hover,
                .navbar-primary .navbar-nav .nav-link:focus {
                    background-color: var(--primary-dark);
                    color: var(--primary-text) !important;
                    transform: translateY(-2px);
                }

                .navbar-primary .navbar-nav .nav-link.active {
                    background-color: var(--primary-dark);
                    color: var(--primary-text) !important;
                }

        /* Primary Buttons */
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: var(--primary-text);
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary:active {
                background-color: var(--primary-dark) !important;
                border-color: var(--primary-dark) !important;
                color: var(--primary-text) !important;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(42, 122, 120, 0.3);
            }

                .btn-primary:active:focus {
                    box-shadow: 0 0 0 0.25rem rgba(42, 122, 120, 0.5) !important;
                }

        .btn-outline-primary {
            color: var(--primary-color);
            border-color: var(--primary-color);
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-outline-primary:hover,
            .btn-outline-primary:focus,
            .btn-outline-primary:active {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                color: var(--primary-text);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(42, 122, 120, 0.3);
            }

        /* Table Styles */
        .table-primary-custom {
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background: white;
        }

            .table-primary-custom thead {
                background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            }

                .table-primary-custom thead th {
                    background-color: transparent;
                    color: var(--primary-text);
                    font-weight: 600;
                    padding: 1rem 0.75rem;
                    border: none;
                    text-transform: uppercase;
                    font-size: 0.875rem;
                    letter-spacing: 0.5px;
                }

                    .table-primary-custom thead th:first-child {
                        border-top-left-radius: 0.5rem;
                    }

                    .table-primary-custom thead th:last-child {
                        border-top-right-radius: 0.5rem;
                    }

            .table-primary-custom tbody tr {
                transition: all 0.3s ease;
            }

                .table-primary-custom tbody tr:hover {
                    background-color: var(--primary-lighter);
                    transform: translateY(-1px);
                    box-shadow: 0 4px 8px rgba(42, 122, 120, 0.1);
                }

            .table-primary-custom tbody td {
                padding: 1rem 0.75rem;
                border-bottom: 1px solid #e9ecef;
                vertical-align: middle;
            }

            .table-primary-custom tbody tr:last-child td {
                border-bottom: none;
            }

                .table-primary-custom tbody tr:last-child td:first-child {
                    border-bottom-left-radius: 0.5rem;
                }

                .table-primary-custom tbody tr:last-child td:last-child {
                    border-bottom-right-radius: 0.5rem;
                }

        /* Striped table variant */
        .table-striped-custom tbody tr:nth-child(odd) {
            background-color: var(--primary-lighter);
        }

            .table-striped-custom tbody tr:nth-child(odd):hover {
                background-color: var(--primary-light);
            }

        /* Bordered table variant */
        .table-bordered-custom {
            border: 2px solid var(--primary-light);
        }

            .table-bordered-custom th,
            .table-bordered-custom td {
                border: 1px solid var(--primary-light);
            }

        /* Table actions */
        .table-actions .btn {
            margin: 0 2px;
            transition: all 0.3s ease;
        }

        .table-actions .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.75rem;
        }

        /* Status badges in table */
        .table-status-badge {
            padding: 0.35rem 0.75rem;
            border-radius: 50rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-active {
            background-color: var(--primary-light);
            color: var(--primary-dark);
        }

        .status-inactive {
            background-color: #f8d7da;
            color: #721c24;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        /* Table responsive */
        .table-responsive-custom {
            border-radius: 0.5rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        /* Custom logout button in navbar */
        .navbar-primary .btn-outline-light {
            border-color: var(--primary-text);
            color: var(--primary-text);
            transition: all 0.3s ease;
        }

            .navbar-primary .btn-outline-light:hover,
            .navbar-primary .btn-outline-light:focus {
                background-color: var(--primary-text);
                border-color: var(--primary-text);
                color: var(--primary-color);
                transform: translateY(-2px);
            }

        /* Form controls focus */
        .form-control:focus,
        .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(42, 122, 120, 0.25);
        }

        /* Links */
        a {
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

            a:hover,
            a:focus {
                color: var(--primary-dark);
            }

        /* Cards with primary border */
        .card-primary {
            border-top: 4px solid var(--primary-color);
        }

        /* Badges */
        .badge-primary {
            background-color: var(--primary-color);
            color: var(--primary-text);
        }

        /* Text colors */
        .text-primary {
            color: var(--primary-color) !important;
        }

        .bg-primary {
            background-color: var(--primary-color) !important;
        }

        /* Pagination */
        .page-link {
            color: var(--primary-color);
        }

            .page-link:hover {
                color: var(--primary-dark);
                background-color: var(--primary-light);
            }

        .page-item.active .page-link {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .content-wrapper {
            padding: 20px;
        }

        /* Loader overlay */
        #loaderOverlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.7);
            z-index: 9999;
            display: none;
            align-items: center;
            justify-content: center;
        }

        /* Custom spinner color */
        .spinner-border.text-primary {
            color: var(--primary-color) !important;
        }

        /* Alert customization */
        .alert-primary {
            background-color: var(--primary-light);
            border-color: var(--primary-color);
            color: var(--primary-dark);
        }

        /* Progress bars */
        .progress-bar {
            background-color: var(--primary-color);
        }
        /* Force override all primary colors */
        .btn-primary,
        .btn-primary:hover,
        .btn-primary:focus,
        .btn-primary:active,
        .btn-primary.active,
        .page-item.active .page-link,
        .badge.bg-primary,
        .alert-primary,
        .progress-bar {
            background-color: #3AAFA9 !important;
            border-color: #3AAFA9 !important;
        }

        .btn-outline-primary {
            color: #3AAFA9 !important;
            border-color: #3AAFA9 !important;
        }

            .btn-outline-primary:hover,
            .btn-outline-primary:focus,
            .btn-outline-primary:active {
                background-color: #3AAFA9 !important;
                border-color: #3AAFA9 !important;
                color: white !important;
            }

        .text-primary {
            color: #3AAFA9 !important;
        }
    </style>
</head>
<body>
    <!-- Loader -->
    <div id="loaderOverlay">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;"></div>
    </div>

    <!-- Navbar with primary color -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-primary shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-shield-check me-2"></i>SubscriptionApp
            </a>

            <div class="d-flex align-items-center ms-auto">
                <span class="text-white me-3">
                    <i class="bi bi-person-circle me-1"></i>Hello, @userName
                </span>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Login" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-light btn-sm">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </button>
                    </form>
                }
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-light text-center py-3 mt-4 border-top">
        <span class="text-muted">&copy; @DateTime.Now.Year - SubscriptionApp</span>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Loader helpers
        function loaderEnable() {
            $("#loaderOverlay").fadeIn(200);
        }
        function loaderDisable() {
            $("#loaderOverlay").fadeOut(200);
        }

        // Add active class to current nav link
        $(document).ready(function () {
            var current = location.pathname;
            $('.navbar-nav .nav-link').each(function() {
                var $this = $(this);
                if ($this.attr('href') === current) {
                    $this.addClass('active');
                }
            });
             // Add hover effects to table rows
            $('.table-primary-custom tbody tr').hover(
                function() {
                    $(this).addClass('hover-shadow');
                },
                function() {
                    $(this).removeClass('hover-shadow');
                }
            );
      
        });
    </script>
</body>
</html>